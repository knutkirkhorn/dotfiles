#!/usr/bin/env bash

# npm aliases
alias ns='npm start'
alias nr='npm run'
alias ni='npm i'
alias nid='npm i -D'
alias nid-eslint='npm i -D eslint eslint-config-airbnb-base eslint-plugin-import eslint-plugin-unicorn'
alias nid-prettier='npm i -D prettier eslint-config-prettier @ianvs/prettier-plugin-sort-imports'
alias nif='npm i -f'
alias nrl='npm run lint'
alias nrd='npm run dev'
alias nu='npm uninstall'
alias no='npm outdated'

# bun aliases
alias bs='bun start'
alias bi='bun install'
alias bid-eslint='bun add -D eslint eslint-config-airbnb-base eslint-plugin-import eslint-plugin-unicorn'
alias br='bun run'
alias brd='bun run dev'
alias brl='bun run lint'

# yarn aliases
alias y='yarn'
alias ys='yarn start'
alias yb='yarn build'
alias ya='yarn add'

# pnpm aliases
alias p='pnpm'
alias pi='pnpm i'

# python aliases
alias python='python3'
alias pip='python3 -m pip'

# Docker aliases
alias d='docker'
alias dc='docker compose'
alias dcu='docker compose up'
alias dcd='docker compose down'

# Requires jwt-cli (https://github.com/mike-engel/jwt-cli)
alias jwd='jwt decode'

alias o='open'

alias gp='git pull'
alias gf='git fetch'

alias nju="ncu -i"

# Create Next App with my own template
alias cna='npx create-next-app@latest -e https://github.com/knutkirkhorn/next-template'
